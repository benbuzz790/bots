[flake8]
max-line-length = 127
extend-ignore = E203, W503
exclude =
    .pytest_tmp_cicd,
    .pytest_tmp,
    archived_docker_testing, 
    .git,
    trash,
    __pycache__,
    docs,
    build,
    dist,
    .eggs,
    *.egg-info,
    .venv,
    tests/test_decorators.py,
   issue103,
   tests/test_python_edit.py,
   tests/test_patch_edit.py,
   tests/test_python_edit/test_python_edit.py,
   tests/test_terminal_tools.py
per-file-ignores =
    __init__.py:F401
